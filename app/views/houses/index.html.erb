<p id="notice"><%= notice %></p>

<h1>Houses</h1>

<table>
  <thead>
    <tr>
      <th>Sqft</th>
      <th>Location</th>
      <th>Address</th>
      <th>Style</th>
      <th>Floors</th>
      <th>Price</th>
      <th>Basement</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.sqft %></td>
        <td><%= house.location %></td>
        <td><%= house.address %></td>
        <td><%= house.style %></td>
        <td><%= house.floors %></td>
        <td><%= house.price %></td>
        <td><%= house.basement %></td>
        <td><%= link_to 'Show', house %></td>
        <% if current_user.role=='realtor' and current_user.id == house.user_id %>
        <td><%= link_to 'Edit', edit_house_path(house) %></td>
        <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <% if current_user.role=='househunter' or current_user.role == 'admin' %>
        <td><%= link_to 'Submit Inquiry', new_inquirydetail_path(:id => house.id) %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
<% if current_user.role == 'realtor' %>
  <%= link_to 'New House', new_house_path %>  
<% end %> 